        <controls:Pivot Title="BeatIt!" Margin="10,10,10,10">
            <!--Pivot item one-->
            <controls:PivotItem Header="{Binding Path=AppResources.HomePage_ChallengesPivotTitle, Source={StaticResource LocalizedStrings}}">
